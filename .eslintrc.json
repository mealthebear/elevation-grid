{
  "env": {
      "browser": true,
      "es2020": true,
      "node": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 11,
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "arrow-parens": ["error", "as-needed"],
      "comma-dangle": ["error", {
          "objects": "always"
      }],
      "eol-last": ["error", "always"],
      "indent": ["error", 2],
      "no-var": "error",
      "semi": ["error", "always"]
  },
  "settings": {
      "react": {
          "createClass": "createReactClass",
          "pragma": "React",
          "version": "detect"
      }
  }
}
